<header class="header">

	<a href="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>


<main class="main">

	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>
		<button type="submit" class="form_button">{{button}}</button>

		<div class="divider1">
			{{> divider}}
		</div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<div class="updates_title">
		<div>{{title}}</div>
		<div class="divider2">
			{{> divider}}
		</div>
	</div>

	{{#each list}}
	<div class="updates_list">
		<img src="https://picsum.photos/32/32" alt="updates_image" class="updates_image">
		<div class="updates_username_data">
			<div class="updates_username">@{{nickname}}</div>
			<p class="updates_description">{{description}}</p>

			<div class="divider2">
				{{> divider}}
			</div>
		</div>
	</div>
	{{/each}}
	<a href="{{show_all.url}}" class="show_all_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
	<div class="expirience_badge">{{badge}}</div>

	<div class="expirience_title">{{title}}</div>
	<div class="cards_experience">
		{{#each list}}
		<div class="expirience_list">
			<div class="expirience_list_name">{{name}}</div>
			<div class="expirience_list_details">{{details}}</div>
		</div>
		{{/each}}
	</div>
</div>

{{/with}}












<footer class="footer" id="test">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>


	{{#each footer}}
	<div class="col-3">
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>